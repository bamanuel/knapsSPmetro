<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_alignLeft="@+id/name"
  android:layout_below="@+id/name"
  android:padding="12dip">
 <TextView android:text="Station Name" android:layout_width="wrap_content" android:textSize="14dip" android:id="@+id/tarifa" android:layout_height="wrap_content" android:layout_below="@+id/color" android:layout_alignParentRight="true"></TextView>
 <TextView android:text="Is Open?" android:layout_width="wrap_content" android:textStyle="bold" android:textSize="16dip" android:id="@+id/name" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"></TextView>
 <TextView android:text="Station Status" android:layout_width="wrap_content" android:textSize="14dip" android:id="@+id/color" android:layout_height="wrap_content" android:layout_alignTop="@+id/name" android:layout_alignRight="@+id/tarifa"></TextView>
</RelativeLayout>
